---
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import { Card, CardGrid } from "@astrojs/starlight/components";
import logo from "../assets/ascend-logo.png";
---

<StarlightPage
  frontmatter={{
    title: "Ascend",
    template: "splash",
    hero: {
      title: "The Open Source Experimentation Platform",
      tagline:
        "Stop spending months building internal tools or paying for expensive closed-source SaaS. Ascend provides a plug-and-play infrastructure for A/B testing and segmentation that you own, control, and host.",
      image: {
        file: logo,
      },
      actions: [
        {
          text: "Get started",
          link: "/introduction/getting-started",
          icon: "right-arrow",
          variant: "primary",
        },
        {
          text: "Read the overview",
          link: "/introduction/overview",
          variant: "minimal",
        },
      ],
    },
  }}
>
  <CardGrid>
    <Card title="High Performance" icon="puzzle">
      Built on vertx for high performance.
    </Card>
    <Card title="Advanced Targeting" icon="rocket">
      Rule based targeting with support of conditional logic.
    </Card>
    <Card title="Flexible Assignments" icon="star">
      Multiple assignment strategies.
    </Card>
    <Card title="Easy Integration" icon="approve-check">
      Native SDKs quick integration.
    </Card>
  </CardGrid>
</StarlightPage>
